<?xml version="1.0" encoding="utf-8"?>
<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0"
        id="cordova-plugin-adfs"
        version="1.0.0">

  <name>adfs</name>

  <engines>
    <engine name="cordova" version=">=3.4.0"/>
  </engines>

  <js-module src="www/adfs.js" name="adfs">
     <clobbers target="adfs" />
  </js-module>

  <platform name="android">
	<framework src="io.jsonwebtoken:jjwt-api:0.11.2" />
	<framework src="io.jsonwebtoken:jjwt-impl:0.11.2" />
	<framework src="io.jsonwebtoken:jjwt-gson:0.11.5" />
	 
	<config-file parent="/manifest/application/activity[@android:name='MainActivity']" target="AndroidManifest.xml">
		<intent-filter>
			<action android:name="${packageName}.redirect" />
			<category android:name="android.intent.category.DEFAULT" />
			<category android:name="android.intent.category.BROWSABLE" />
		</intent-filter>
	</config-file>
	
    <config-file target="res/xml/config.xml" parent="/*">		  
      <feature name="adfs">
        <param name="android-package" value="de.mopsdom.adfs.cordova.adfs"/>
      </feature>
	  	
    </config-file>
	<config-file target="AndroidManifest.xml" parent="/*">
		<uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
		<uses-permission android:name="android.permission.GET_ACCOUNTS" />
		<uses-permission android:name="android.permission.MANAGE_ACCOUNTS" />
		<uses-permission android:name="android.permission.INTERNET" />
		<uses-permission android:name="android.permission.USE_CREDENTIALS" />
		
	</config-file>
	
    <source-file src="src/android/adfs.java" target-dir="src/de/mopsdom/adfs/cordova"/>
	
	<source-file src="src/android/Utils.java" target-dir="src/de/mopsdom/adfs/cordova/utils"/>

  </platform>


</plugin>
