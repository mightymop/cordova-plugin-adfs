<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="noAnimTheme" parent="Theme.AppCompat.NoActionBar.Translucent">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="Theme.AppCompat.NoActionBar.Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="noAnimThemeADFS" parent="Theme.AppCompat.NoActionBar.TranslucentADFS">
        <item name="android:windowAnimationStyle">@null</item>
    </style>
    <style name="Theme.AppCompat.NoActionBar.TranslucentADFS" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">#00000000</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="Theme.ADFS_Settings" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/polblue</item>
        <item name="colorPrimaryVariant">@color/polblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
</resources>